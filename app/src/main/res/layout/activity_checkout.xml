<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.purplecommerce.nubella.CheckoutActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/muted_white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >


            <include layout="@layout/tool_bar"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/_40sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:padding="@dimen/_5sdp">

      <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center">

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="1."
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:text="LOGIN"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/small_text"/>

                        <views.textview.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/muted_grey"
                            android:text="+919910623373"
                            android:layout_marginLeft="@dimen/_10sdp"
                            geekui:customTypeface="fonts/CoreSansDRegular.otf"
                            android:textSize="@dimen/small_text"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"/>


                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/muted_grey"
                        android:text="CHANGE"
                        android:layout_marginLeft="@dimen/_10sdp"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:textSize="@dimen/small_text"
                        android:background="@drawable/selector_grey_black"
                        android:padding="@dimen/_5sdp"/>

                </LinearLayout>


       </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center">

                <views.textview.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="2."
                   android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:text="DELIVERY ADDRESS"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/small_text"/>

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/muted_grey"
                        android:text="415, 4th Floor Metropolis Mall MG Road (122001)"
                        android:layout_marginLeft="@dimen/_10sdp"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:textSize="@dimen/small_text"
                        android:maxLines="2"/>

                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"/>

                <views.textview.TypefaceTextView
                    android:id="@+id/address_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/muted_grey"
                    android:text="CHANGE"
                    android:layout_marginLeft="@dimen/_10sdp"
                    geekui:customTypeface="fonts/CoreSansDRegular.otf"
                    android:textSize="@dimen/small_text"
                    android:background="@drawable/selector_grey_black"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center">

                <views.textview.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="3."
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:text="ORDER SUMMARY"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/small_text"/>

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/muted_grey"
                        android:text="1 Item (Total 1000)"
                        android:layout_marginLeft="@dimen/_10sdp"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:textSize="@dimen/small_text"
                        android:maxLines="2"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_grey_black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    >

                <views.textview.TypefaceTextView
                    android:id="@+id/summary_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/muted_grey"
                    android:text="SHOW"
                    geekui:customTypeface="fonts/CoreSansDRegular.otf"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_9sdp"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_checkout_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/_1sdp"-->
                    <!--android:background="@color/colorPrimary"-->
                    <!--android:layout_marginTop="@dimen/_5sdp"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5sdp">

                <include layout="@layout/layout_price_details"/>


                </LinearLayout>


            </LinearLayout>


          </LinearLayout>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center">

                <views.textview.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="4."
                    android:padding="@dimen/_5sdp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:text="PAYMENT OPTIONS"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/small_text"/>

                    <views.textview.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/muted_grey"
                        android:text="Cash On Delivery"
                        android:layout_marginLeft="@dimen/_10sdp"
                        geekui:customTypeface="fonts/CoreSansDRegular.otf"
                        android:textSize="@dimen/small_text"
                        android:maxLines="2"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"/>

                <views.textview.TypefaceTextView
                    android:id="@+id/txt_pay_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/muted_grey"
                    android:text="CHANGE"
                    android:layout_marginLeft="@dimen/_10sdp"
                    geekui:customTypeface="fonts/CoreSansDRegular.otf"
                    android:textSize="@dimen/small_text"
                    android:background="@drawable/selector_grey_black"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

            </LinearLayout>


             <LinearLayout
                 android:id="@+id/ll_pay_options"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:visibility="gone">


                 <CheckBox
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="Cash On Delivery"
                     android:theme="@style/MyCheckBox"/>

                 <CheckBox
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="Paypal"
                     android:theme="@style/MyCheckBox"/>

                 <CheckBox
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="Pay U Money"
                     android:theme="@style/MyCheckBox"/>


             </LinearLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


   </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/shadow"/>


            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"
                android:text="CONTINUE"
                android:textSize="@dimen/medium_text"
                android:gravity="center"
                android:background="@drawable/ripple_text_white_grey"/>


        </LinearLayout>



    </FrameLayout>

</LinearLayout>
